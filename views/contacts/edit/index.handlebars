<div class="page-wrapper">
    <div class="container-fluid">
        <div class="row page-titles">
            <div class="col-md-5 col-8 align-self-center">
                <h3 class="text-themecolor m-b-0 m-t-0">Edit a Contact</h3>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="javascript:void(0)">Home</a></li>
                    <li class="breadcrumb-item active">Edit a Contact</li>
                </ol>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12 col-xlg-12 col-md-12">
                <div class="card">
                    <div class="card-block">
                        <form name="edit-contact" action="/contacts/{{contact.contactFirstName}}?_method=PUT" method="post" class="form-horizontal form-material">
                            <div class="form-group">
                                <label class="col-md-12">Contact's First Name</label>
                                <div class="col-md-12">
                                    <input type="text" name="contactFirstName" value="{{contact.contactFirstName}}" class="form-control form-control-line" required data-validation-required-message="Please enter your contact's first name.">
                                    <p class="help-block text-danger"></p>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-12">Contact's Last Name</label>
                                <div class="col-md-12">
                                    <input type="text" name="contactLastName" value="{{contact.contactLastName}}" class="form-control form-control-line" required data-validation-required-message="Please enter your contact's last name.">
                                    <p class="help-block text-danger"></p>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-12">Contact's Phone Name</label>
                                <div class="col-md-12">
                                    <input type="tel" name="contactNumber" value="{{contact.contactNumber}}" class="form-control form-control-line" required data-validation-required-message="Please enter your contact's phone number.">
                                    <p class="help-block text-danger"></p>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-sm-12">
                                    <button type="submit" class="btn btn-default">Save changes</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

