<header class="intro-header" style="background-image: url('/img/home-bg.jpg')">
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
        <div class="site-heading">
          <h1>Contacts</h1>
          <hr class="small">
        </div>
      </div>
    </div>
  </div>
</header>

<div class="container">
  <div class="row">
      <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
        {{#if cur_user}}
        {{#each allContacts}}
          <div class="post-preview">
            <a href="contacts/{{this.contactFirstName}}">
              <h2 class="post-title">
                {{this.contactFirstName}} {{this.contactLastName}}
              </h2>
            </a>
            <a href="contacts/{{this.contactFirstName}}/edit">
              <button type="submit" class="btn btn-default">Edit</button>
            </a>
            <form name="delete-contact" method="POST" action="/contacts/{{this.contactFirstName}}?_method=DELETE">
              <button type="submit" class="btn btn-default">Delete</button>
            </form>
          </div>
          <hr>
        {{/each}}
        <div class="create-contact">
          <a class="btn btn-default" href="/contacts/new">Create Contact</a>
        </div>
        {{/if}}
      </div>
  </div>
</div>
